# CryptoBattleship Environment Configuration

# Deployment wallet private key (without 0x prefix)
PRIVATE_KEY=your_private_key_here

# Admin wallet address (will own all contracts)
INITIAL_ADMIN=0x1234567890123456789012345678901234567890

# Treasury wallet address (receives fees and initial token supply)
TEAM_TREASURY=0x1234567890123456789012345678901234567890

# Optional: Etherscan V2 API key for contract verification (works on all EVM chains including Sonic)
ETHERSCAN_API_KEY=your_etherscan_v2_api_key_here

